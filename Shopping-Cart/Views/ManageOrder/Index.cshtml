@model IEnumerable<Shopping_Cart.Models.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RecieverName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RecieverPhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RecieverAddress)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RecieverName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RecieverPhone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RecieverAddress)
        </td>
        <td>
            @Html.ActionLink("商品明細", "Details", new { id=item.Id }, new { @class = "btn btn-default"}) 
        </td>
    </tr>
}

</table>
