@using Microsoft.AspNet.Identity;
@model List<Shopping_Cart.Models.Product>

@{
    ViewBag.Title = "購物首頁";
    var UserID = User.Identity.GetUserId();
    var UserName = User.Identity.Name;

}

<div class="jumbotron">
    <h2>IT購物網站 - 什麼都沒有 - 什麼都沒賣</h2>
    <h6>@Html.ActionLink("關於網站","About",new { @class = "btn btn-primary btn-lg"} )</h6>
</div>

<div class="row">
    @foreach(var product in this.Model)
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img class="img-thumbnail" src="@product.ImageUrl" alt="商品圖片" />
                <div class="caption">
                    <h3>@product.Name</h3>
                    <p>@product.Description</p>
                    @if (product.StatusSale)
                    {
                        <p>特價: @product.PriceDiscount</p>
                    }
                    else
                    {
                        <p>售價: @product.Price</p>
                    }
                    <p>庫存: @product.Quantity</p>
                    <p>
                        <a href="javascript:void(0);" onclick="AddToCart('@product.Id')"class="btn btn-primary" role="button">加入購物車</a>
                        <a href="javascript:void(0);" class="btn btn-default" role="button">詳細資訊</a>
                    </p>
                    </div>
            </div>
        </div>
    }






